<%- include('templates/header')%>

<div class="d-flex justify-content-center">
    <div class="container my-5 text-center">
        <h1 class="tk-ani-grad">Products</h1>
        <span class="tk-text">Add, modify and remove products</span>
    </div>
</div>
    
    <div class="d-flex justify-content-end mx-5">       
        <%- include('templates/modal_addProduct')%>
    </div>
    
    <%- include('templates/modal_editProduct')%>

    <div class="container mt-3">
        <div class="card tk-card">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                    </thead>
                    <tbody>
                    <% products.forEach(product => { %>
                        <tr class="tk-showData">
                            <td id="id_<%= product.id %>"><%= product.id %></td>
                            <td id="name_<%= product.id %>"><%= product.name %></td>
                            <td id="desc_<%= product.id %>"><%= product.description %></td>
                            <td id="price_<%= product.id %>"><%= product.price %></td>
                            <td class="d-flex justify-content-end">
                                <button class="btn tk-form-btn mx-3" data-bs-toggle="modal" data-bs-target="#modal_editProduct" onclick="edit(<%= product.id %>)">Edit</button>
                                <a class="btn tk-form-btn mx-3" href="/remove_product/<%= product.id %>">Delete</a> 
                            </td>
                        </tr>   
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        function edit(id) {
            $('#edt_id').val($('#id_'+id).text());
            $('#edt_name').val($('#name_'+id).text());
            $('#edt_description').val($('#desc_'+id).text());
            $('#edt_price').val($('#price_'+id).text());
        }
    </script>
<%- include('templates/footer')%>
