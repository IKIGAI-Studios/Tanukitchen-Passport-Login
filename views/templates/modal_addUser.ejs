
<button class="btn tk-form-btn" data-bs-toggle="modal" data-bs-target="#modal_user">Add a user</button>

<!-- Modal -->
<div class="modal fade" id="modal_user" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content  tk-modal">
        <div class="modal-header">
          <h5 class="modal-title tk-text">Adding a user</h5>
          </button>
        </div>
        <div class="modal-body">

          <form action="" method="post">

            <div class="container">
                <label class="form-label tk-form-label" for="fullname">Full Name</label>
                <input type="text" name="fullname" id="fullname" class="form-control tk-form-input"/>
            </div>
            
            <div class="container">
                <label class="form-label tk-form-label" for="username">Username</label>
                <input type="text" name="username" id="username" class="form-control tk-form-input"/>
            </div>
            
            <div class="container">
                <label class="form-label tk-form-label" for="email">Email</label>
                <input type="email" name="email" id="email" class="form-control tk-form-input"/>
            </div>

            <div class="container">
              <label class="form-label tk-form-label" for="password">Password</label>
              <input type="password" name="password" id="password" class="form-control tk-form-input"/>
            </div>

          </form>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn tk-form-btn" style="background-color: #4B6CB7;" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn tk-form-btn">Add</button>
        </div>
      </div>
    </div>
  </div>