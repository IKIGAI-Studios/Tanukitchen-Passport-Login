
<button class="btn tk-form-btn m-4" data-bs-toggle="modal" data-bs-target="#modal_product">Add a product</button>

<!-- Modal -->
<div class="modal fade" id="modal_product" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content  tk-modal">
        <div class="modal-header">
          <h5 class="modal-title tk-text">Adding a product</h5>
          </button>
        </div>
        <form action="new_product" method="POST">
          <div class="modal-body">


              <div class="container">
                  <label class="form-label tk-form-label" for="name">Name of the product</label>
                  <input type="text" name="name" id="name" class="form-control tk-form-input"/>
              </div>
              
              <div class="container">
                  <label class="form-label tk-form-label" for="description">Description</label>
                  <input type="text" name="description" id="description" class="form-control tk-form-input"/>
              </div>
              
              <div class="container">
                  <label class="form-label tk-form-label" for="price">Price</label>
                  <input type="number" step="0.01" name="price" id="price" class="form-control tk-form-input"/>
              </div>



          </div>
          <div class="modal-footer">
            <button type="button" class="btn tk-form-btn" style="background-color: #4B6CB7;" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn tk-form-btn">Add</button>
          </div>
      </form>
      </div>
    </div>
  </div>