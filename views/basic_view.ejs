<%- include('templates/header')%>

<div class="d-flex justify-content-center">
    <div class="container my-5 text-center">
        <h1 class="tk-ani-grad">Products</h1>
        <span class="tk-text">Add, modify and remove products</span>
    </div>
</div>

    <div class="d-flex justify-content-end mx-5">       
        <a class="btn tk-form-btn m-4" href="/protected">Profile</a> 
        <a class="btn tk-form-btn m-4" href="/logout">Logout</a>
    </div>

    <div class="container mt-3">
        <div class="card tk-card">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                    </thead>
                    <tbody>
                    <% products.forEach(product => { %>
                        <tr class="tk-showData">
                            <td id="id_<%= product.id %>"><%= product.id %></td>
                            <td id="name_<%= product.id %>"><%= product.name %></td>
                            <td id="desc_<%= product.id %>"><%= product.description %></td>
                            <td id="price_<%= product.id %>"><%= product.price %></td>
                        </tr>   
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<%- include('templates/footer')%>
