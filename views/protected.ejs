<%- include('templates/header')%>

<div class="container pt-5">
    <h1 class="tk-text">My profile</h1>
    <hr class="tk-green-line">
</div>

<div class="d-flex justify-content-center align-items-center pt-3">
    <div class="col-sm-5">
        <div class="d-flex justify-content-center">
            <img class="usr-pfp" src="./img/light-tanukitchen-logo.png">
        </div>
        <div class="d-flex justify-content-center">
            <input type="text" name="username" id="username" class="form-control tk-usr-input" disabled/>
        </div>
    </div>

    <div class="col-sm-5">
      
        <div class="row">
          <label class="form-label tk-usr-label" for="fullname">Full Name</label>
          <input type="text" name="fullname" id="fullname" class="form-control tk-usr-input" disabled/>
        </div>

        <div class="row">
          <label class="form-label tk-usr-label" for="email">Email</label>
          <input type="email" name="email" id="email" class="form-control tk-usr-input" disabled/>
        </div>
  
        <div class="row">
          <label class="form-label tk-usr-label" for="password">Password</label>
          <input type="password" name="password" id="password" class="form-control tk-usr-input" disabled/>
        </div>

    </div>
    
  </div> 

<%- include('templates/footer')%>