<%- include('templates/header')%>
<div class="row d-flex justify-content-center">
  <div class="container m-5 form-signin" style="width: 40%">

    <form action="/register" method="post" class="tk-form mx-5" style="width: 80%">
        
      <div class="container mb-5">
        <h1 class="tk-text">Create new account</h1>
        <span class="tk-text">Already a member?</span>
        <a href="/login" class="tk-link">Log in</a>
      </div>
    
      <div class="container">
        <label class="form-label tk-form-label" for="fullname">Full Name</label>
        <input type="text" name="fullname" id="fullname" class="form-control tk-form-input" />
      </div>
    
      <div class="container">
        <label class="form-label tk-form-label" for="user">Username</label>
        <input type="text" name="username" id="username" class="form-control tk-form-input"/>
      </div>
    
      <div class="container">
        <label class="form-label tk-form-label" for="password">Email</label>
        <input type="email" name="email" id="email" class="form-control tk-form-input" />
      </div>

      <div class="container">
        <label class="form-label tk-form-label" for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control tk-form-input" />
      </div>

      <div>
        <div class="d-flex mt-3 justify-content-center">
          <button type="submit" class="btn tk-form-btn">Sign Up</button>
        </div>
      </div>
    </form>

  </div>

  <div class="container" style="width: 40%">

    <div class="d-flex justify-content-center">
      <img src="./img/light-tanukitchen-logo.png" class="img m-5" 
      alt="TanuLogo" height="400" width="auto">
    </div>
    <div class="d-flex justify-content-center">
      <h2 class="tk-ani-grad">Monitoring your kitchen</h2>
    </div>

    <div class="d-flex justify-content-center">
      <img src="./img/300px-The_Fire.gif" style="position: absolute">
      <h5 class="tk-text">Sign up now to be able to buy your smart kitchen modules!</h5>  
    </div>

  </div>
  
</div> 
<%- include('templates/footer')%>